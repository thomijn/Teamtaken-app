{{#if team}}
<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link active" href="/home">Dashboard</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/teams/team">Mijn team</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/users/my-profile">Mijn Profiel</a>
    </li>
    {{#if teamCaptain}}
    <li class="nav-item">
        <a class="nav-link" href="/tasks/add-a-task">Taak aanmaken</a>
    </li>
    {{/if}}
</ul>
{{/if}}

{{#if team}}
<div class="jumbotron">
    <div class="container">
        <h1 class="display-3">Welkom {{user.firstname}}</h1>
        <h1 class="display-3">De TeamTaken app</h1>
        <p class="lead">Een simpele plek om al je team taken te managen</p>
        <hr class="my-4">
        <p class="lead">
            <a class="btn btn-primary btn-lg" href="/teams/team" role="button">Mijn Team</a>
        </p>
    </div>
</div>
{{else}}
<div class="jumbotron">
    <div class="container">
        <h1 class="display-3">Welkom {{user.firstname}}</h1>
        <h1 class="display-3">De TeamTaken app</h1>
        <p class="lead">Een simpele plek om al je team taken te managen</p>
        <hr class="my-4">
        <p class="lead">Helaas, je bent nog niet toegevoegd aan een team! <span class="fal fa-frown" /></p>
    </div>
</div>
{{/if}}

{{#if team}}
<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <div class="card mt-4">
                <div class="card-header">
                    Eerst aankomende taak
                </div>
                <div class="card-body">
                    {{#if task}}
                    <div class="card">
                        <div class="card-body">

                            <div class="row align-items-center">
                                <div class="col-sm-12">
                                    <h5>{{task.title}}</h5>
                                </div>
                                <div class="col-sm-12">
                                    <p><span style="margin-right: 5px;" class="fal fa-clock fa-lg"> </span>
                                        {{timeTill}}</p>
                                </div>
                            </div>

                        </div>
                        {{else}}
                        <div class="row align-items-center">
                            <div class="col-sm-6">
                                <p>Je hebt geen aankomende taken
                                </p>
                            </div>
                        </div>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card mt-4">
                <div class="card-header">
                    Mijn team
                </div>
                <div class="card-body">
                    {{#if team.members}}
                    <div class="card">
                        <ul class="list-group list-group-flush">
                            {{#each team.members}}
                            <li class="list-group-item">
                                <div class="row align-items-center">
                                    <div class="col-sm-12">
                                        <span{{#ifCond this._id ../user._id }} style="font-weight:600" {{/ifCond}}>
                                            {{this.firstname}} {{this.lastname}}</span>
                                            {{#ifCond this.role "team-captain"}}
                                            <span data-toggle="tooltip" data-placement="top" title="Team aanvoerder"
                                                class="fa-stack fa-sm ">
                                                <i class="fas fa-square fa-stack-2x"></i>
                                                <i class="fab fa-cuttlefish fa-stack-1x fa-inverse"></i>
                                            </span>
                                            {{/ifCond}}
                                    </div>
                                </div>
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                    {{else}}
                    <div class="row align-items-center">
                        <div class="col-sm-6">
                            <p>dit team heeft nog geen spelers</p>
                        </div>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>
</div>
{{/if}}