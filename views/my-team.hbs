{{> nav}}

{{>messages}}

<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link" href="/home">Dashboard</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" href="/teams">Mijn team</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="modal" data-target="#add-team-modal" href="/add-a-team">Mijn Profiel</a>
    </li>
</ul>

<div class="container">
    <div class="row">

        <div class="col-sm-8">
            <div class="card mt-4">
                <div class="card-header">
                    Team Taken
                </div>
                <div class="card-body">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-10">
                                    <div class="card-title">
                                        <h4>Wedstrijd fluiten H6</h4>
                                    </div>
                                    <div class="card-text">
                                        12 oktober 14:00
                                    </div>
                                </div>
                                <div class="col-sm-2">
                                    <p><span class="far fa-check fa-4x" style="color: green" /></p>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            Uitvoerder(s)
                            <h5><span class="badge badge-secondary">Thomas gertenbach</span></h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-4">
            <div class="card mt-4">
                <div class="card-header">
                    Mijn team
                </div>
                <div class="card-body">
                    {{#if team.members}}
                    <div class="card">
                        <ul class="list-group list-group-flush">
                            {{#each team.members}}
                            <li class="list-group-item">
                                <div class="row align-items-center">
                                    <div class="col-sm-12">
                                        {{this.firstname}} {{this.lastname}}
                                    </div>
                                </div>
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                    {{else}}
                    <div class="row align-items-center">
                        <div class="col-sm-6">
                            <p>dit team heeft nog geen spelers</p>
                        </div>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>

    </div>
</div>